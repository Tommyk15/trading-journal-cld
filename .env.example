# Trading Journal Configuration
# Copy this file to .env and fill in your credentials

# Application Settings
APP_NAME="Trading Journal"
APP_VERSION="0.1.0"
DEBUG=false

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=trading_journal
POSTGRES_PASSWORD=trading_journal
POSTGRES_DB=trading_journal
# Optional: Override with full DATABASE_URL if needed
# DATABASE_URL=postgresql+asyncpg://user:pass@host:port/db

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# IBKR Configuration
IBKR_HOST=127.0.0.1
IBKR_PORT=7496          # 7496 for live trading, 7497 for paper trading
IBKR_CLIENT_ID=1

# IBKR Flex Query (for historical execution data - RECOMMENDED)
# The live API only returns same-day executions, Flex Query gets full history
# See FLEX_QUERY_SETUP.md for setup instructions
IBKR_FLEX_TOKEN=your_flex_web_service_token_here
IBKR_FLEX_QUERY_ID=your_flex_query_id_here

# Polygon.io Configuration (Optional - not needed for Phase 0)
POLYGON_API_KEY=your_polygon_api_key_here
